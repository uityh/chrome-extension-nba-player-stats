{
  "name": "NBA Player Stats Retriever",
  "version": "1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["*://www.balldontlie.io/api/v1/"],
      "js": ["popup.js"]
    }
  ],
  "browser_action": {
    "default_title": "NBA Player Stats Retriever",
    "default_popup" : "popup.html"
  },
  "icons": { "16": "images/icon_16.png",
    "48": "images/icon_48.png",
   "128": "images/icon_128.png" }
}